{
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "serialport"],
    "files": [
        "Adapter.ts",
        "Adapters.ts",
        "adapters/Network.ts",
        "adapters/Serial.ts",
        "Printer.ts",
        "Commands.ts",
        "Image.ts",
        "types.d.ts"
    ],
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "js/",
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true
    }
}