{
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "serialport"],
    "files": [
        "src/Adapter.ts",
        "src/Adapters.ts",
        "src/adapters/Network.ts",
        "src/adapters/Serial.ts",
        "src/Printer.ts",
        "src/Commands.ts",
        "src/Image.ts",
        "src/index.ts",
        "src/types.d.ts",
        "src/Test.ts"
    ],
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "dist/",
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true
    }
}